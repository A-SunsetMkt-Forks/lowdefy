{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lowdefy VSCode",
  "scopeName": "lowdefy.js.yaml",
  "patterns": [
    {
      "include": "#js-code"
    },
    {
      "include": "#jinja-strings"
    },
    {
      "include": "source.yaml"
    }
  ],
  "fileTypes": ["yaml", "yml"],
  "injectionSelector": "L:source.yaml -comment",
  "repository": {
    "jinja-strings": {
      "patterns": [
        {
          "name": "string.unquoted.jinja.yaml",
          "begin": "(?<=_nunjucks:\\s*)(?=[^'\"#\\{\\[\\]%*&,!|>])(?!\\d+\\s*$)",
          "end": "(?=[,\\]}#]|\\s*$)",
          "patterns": [
            {
              "include": "source.jinja"
            }
          ]
        },
        {
          "name": "string.block.jinja.yaml",
          "begin": "(?<=_nunjucks:\\s*(\\|)|(>))([1-9])?([-+])?(.*\\n?)",
          "beginCaptures": {
            "1": {
              "name": "value.jinja.yaml"
            }
          },
          "end": "^(?=\\S)|(?!\\G)",
          "patterns": [
            {
              "begin": "^([ ]+)(?! )",
              "end": "^(?!\\1|\\s*$)",
              "patterns": [
                {
                  "include": "source.jinja"
                }
              ]
            }
          ]
        }
      ]
    },
    "js-code": {
      "patterns": [
        {
          "name": "string.unquoted.js.yaml",
          "begin": "(?<=_js:\\s*)(?=[^'\"#\\{\\[\\]%*&,!|>])(?!\\d+\\s*$)",
          "end": "(?=[,\\]}#]|\\s*$)",
          "patterns": [
            {
              "include": "source.js"
            }
          ]
        },
        {
          "name": "string.block.js.yaml",
          "begin": "(?<=_js:\\s*(\\|)|(>))([1-9])?([-+])?(.*\\n?)",
          "beginCaptures": {
            "1": {
              "name": "value.js.yaml"
            }
          },
          "end": "^(?=\\S)|(?!\\G)",
          "patterns": [
            {
              "begin": "^([ ]+)(?! )",
              "end": "^(?!\\1|\\s*$)",
              "patterns": [
                {
                  "include": "source.js"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
