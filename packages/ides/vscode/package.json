{
  "name": "lowdefy-vscode",
  "displayName": "Lowdefy Developer Tools",
  "description": "Lowdefy Developer Tools",
  "version": "4.0.2-alpha.3",
  "publisher": "lowdefy",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lowdefy/lowdefy"
  },
  "categories": [],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "configuration": {
      "title": "Lowdefy Developer Tools",
      "properties": {
        "lowdefyDevTools.localServerPort": {
          "type": "number",
          "default": 3000,
          "description": "Specifies the local server port of the running Lowdefy dev server."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lowdefy",
          "title": "Lowdefy",
          "icon": "media/lowdefy.svg"
        }
      ]
    },
    "views": {
      "lowdefy": [
        {
          "id": "lowdefyAppTree",
          "name": "App Tree",
          "visibility": "visible"
        },
        {
          "id": "lowdefyDataInspector",
          "name": "Data Inspector",
          "visibility": "visible"
        }
      ]
    },
    "languages": [
      {
        "id": "yaml-lowdefy",
        "aliases": [
          "yaml-lowdefy"
        ],
        "extensions": [
          ".yaml",
          ".yml"
        ]
      },
      {
        "id": "nunjucks",
        "aliases": [
          "nunjucks"
        ],
        "extensions": [
          ".njk"
        ]
      }
    ],
    "grammars": [
      {
        "language": "yaml-lowdefy",
        "scopeName": "source.yaml.lowdefy.injection",
        "injectTo": [
          "source.yaml"
        ],
        "path": "./syntaxes/yaml-lowdefy.injection.json"
      },
      {
        "language": "nunjucks",
        "scopeName": "source.nunjucks",
        "path": "./syntaxes/nunjucks.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "transpile-syntaxes": "pnpx js-yaml syntaxes/yaml-lowdefy.injection.yaml > syntaxes/yaml-lowdefy.injection.json",
    "compile": "pnpm run transpile-syntaxes && tsc -p ./",
    "package": "pnpm run transpile-syntaxes && tsc -p ./ && vsce package",
    "watch": "tsc -watch -p ./",
    "watch:syntaxes": "nodemon -e yaml --watch syntaxes --exec pnpm run transpile-syntaxes",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "8.0.0",
    "@types/js-yaml": "4.0.9",
    "@types/mocha": "10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "2.6.11",
    "@types/vscode": "1.74.0",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "@vscode/test-electron": "2.2.0",
    "glob": "10.3.12",
    "js-yaml": "4.1.0",
    "mocha": "10.1.0",
    "nodemon": "3.1.0",
    "typescript": "4.9.3",
    "vsce": "2.15.0"
  },
  "dependencies": {
    "node-fetch": "2.7.0"
  }
}
