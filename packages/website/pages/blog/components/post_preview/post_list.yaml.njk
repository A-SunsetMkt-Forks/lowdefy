{% set post_root = 'pages/blog/categories' %}

{% set categories = [
  { category: 'case_studies', posts: 'ingrain-complaints' },
  { category: 'releases', id: 'lowdefy-v4-launch' }
  ]  
%}

id: post_list
type: Box
layout:
  contentGutter: 20
blocks: 
{% for post in posts %}
{% set post_vars = [post_root, post.category, post.id, "vars.yaml"] | join("/") %}
  - _ref:
      path: pages/blog/components/post_preview/post_preview.yaml.njk
      vars: 
        _ref: {{ post_vars }}
{% endfor %}

