id: post_preview
type: Card
layout:
  contentGutter: 16
properties:
  style:
    '&:hover':
      boxShadow: 0px 5px 8px -3px rgba(0,0,0,0.1)
      border: '1px solid var(--primary-color)'
events:
  onClick:
    - id: link_to_post
      type: Link
      params: {{ post.slug }}
blocks:
  - id: {{ post.slug }}_image
    type: Img
    layout:
      flex: 1 0 250px
      align: center
    properties:
      src: {{ post.image }}
      style:
        borderRadius: 10px
        height: auto
        maxWidth: 100%
  - id: info_box
    type: Box
    layout:
      flex: 1 0 400px
      contentGutter: 8
    blocks:
      - id: {{ post.slug }}info
        type: Html
        properties:
          html: |
            <h4>Ingrain Customer Support Case Management</h4>
            <p>When a Ticketing System isn't Enough</p>

      - id: author_block
        type: Box
        layout:
          flex: 1 0 auto
        blocks:
          - id: avatar
            type: Avatar
            layout:
              flex: 1 0 40
            properties:
              size: 40
              src: {{ author.image }}
              alt: {{ author.name }}
          - id: details
            type: Html
            layout:
              flex: 1 0 auto
            style:
              marginLeft: 10
              fontSize: 12
            properties:
              html: |
                <b>{{ author.name }}</b>
                <p>6 September 2024</p>
      - id: {{ post.slug }}anchor
        type: Anchor
        layout:
          flex: 0 1 auto
        style:
          marginTop: 20
        properties:
          href: {{ post.slug }}
          title: Click to view
          newTab: true
