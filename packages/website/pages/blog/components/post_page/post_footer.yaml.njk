id: author_block
type: Box
layout:
  flex: 1 0 auto
blocks:
  - id: avatar
    type: Avatar
    layout:
      flex: 1 0 40
    properties:
      size: 40
      src: 
        _ref: 
          path: 'pages/blog/authors.yaml'
          key: {{ author.id }}.image
      alt: 
        _ref: 
          path: 'pages/blog/authors.yaml'
          key: {{ author.id }}.name
  - id: details
    type: Html
    layout:
      flex: 1 0 auto
    style:
      marginLeft: 10
      fontSize: 12
    properties:
      html: |
        <b>{{ author.id }}</b>
        <p>{{ post.date }}</p>
