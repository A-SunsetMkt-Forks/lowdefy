{% set post_path = [post.category, post.id] | join("/") %}
{% set vars = ['pages/blog/categories', post_path, "vars"] | join("/") + ".yaml" %}

id: {{ post.id }}
type: Box
properties:
  title: {{ post.title }}
style:
  padding: 0px 8px
layout:
  contentJustify: center
blocks:
  - _ref: shared/header/header.yaml
  - id: post_container
    type: Box
    layout:
      contentJustify: center
    style:
      maxWidth: 1000px
    blocks:
      - id: post_page
        type: Box
        style:
          maxWidth: 800px
          margin: 60px auto
        layout:
          contentJustify: center
        blocks:
          - _ref: 
              path: 'pages/blog/components/post_page/post_content.yaml.njk'
              vars: 
                _ref: {{ vars }}
      - _ref: shared/cta.yaml
  - _ref: shared/footer/footer.yaml
  - _ref: shared/built_with_lowdefy.yaml
