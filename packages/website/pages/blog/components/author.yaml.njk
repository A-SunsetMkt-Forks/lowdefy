id: author_block
type: Box
blocks:
  - id: avatar
    type: Avatar
    layout:
      flex: 1 0 40
    properties:
      size: 40
      src:
        _var: img
      alt:
        _var: name
  - id: details
    type: Html
    layout:
      flex: 1 0 auto
    style:
      marginLeft: 10
      fontSize: 12
    properties:
      html: |
        <b>{{ name }}</b>
        <p>{{ date }}</p>
