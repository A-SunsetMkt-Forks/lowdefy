{% set posts = 'pages/blog/categories' %}
{% set components = 'pages/blog/components' %}

{% set post_path = [posts, post.category, post.slug] | join("/") %}
{% set content_path = [post_path, "content.md"] | join("/") %}
{% set post_sections = ["post_header", "post_content", "post_footer"] %}

{% set author_path = 'pages/blog/authors.yaml' %}
# {% set vars = [post_path, "vars"] | join("/") + ".yaml" %}

id: post_page
type: Box
style:
  maxWidth: 800px
  margin: 60px auto
layout:
  contentJustify: center
blocks:
{% for section in post_sections %}
  - _ref: 
      path: {{ [components, section] | join("/") + ".yaml.njk" }}
      vars: 
        _ref: {{ [post_path, "vars"] | join("/") + ".yaml" }}
        content_path: {{ content_path }}
{% endfor %}

