{% set blog_root = 'pages/blog/categories' %}
{% set post_path = [blog_root, post.category, post.slug] | join("/") %}
{% set post_sections = ["post_header", "post_content", "post_footer"] %}

id: post_page
type: Box
style:
  maxWidth: 800px
  margin: 60px auto
layout:
  contentJustify: center
blocks:
{% for section in post_sections %}
  - _ref: {{ [post_path, section] | join("/") + ".yaml" }}
  # - _ref: pages/blog/categories/case_studies/ingrain/post_page.yaml
{% endfor %}

